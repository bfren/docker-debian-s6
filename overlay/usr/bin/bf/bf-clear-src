#!/command/with-contenv sh

set -euo pipefail


#======================================================================================================================
# Check environment variable.
#======================================================================================================================

[[ -z "${BF_SRC-}" ]] && bf-error "BF_SRC environment variable is not set." "bf-clear-src"


#======================================================================================================================
# Clear source directory.
#======================================================================================================================

bf-echo "Clearing ${BF_SRC}..." "bf-clear-src"
rm -rf ${BF_SRC}/*
bf-done "bf-clear-src"
